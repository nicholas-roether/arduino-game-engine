{
	"env": {
		"arduinoPath": "${config:arduino.path}",
		"arduinoAvrPath": "${env:arduinoPath}/hardware/arduino/avr",
		"arduinoAvrToolsPath": "${env:arduinoPath}/hardware/tools/avr",
		"arduinoLibraryPath": "${env:arduinoPath}/libraries",
		"arduinoAvrCompilerPath": "${env:arduinoAvrToolsPath}/bin/avr-g++.exe"
	},
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/**",
				"${env:arduinoAvrPath}/cores/arduino/**",
				"${env:arduinoAvrPath}/variants/standard",
				"${env:arduinoAvrToolsPath}/avr/include",
				"${env:arduinoLibraryPath}/**"
            ],
            "defines": [
                "ARDUINO=10810",
                "__AVR_ATmega328P__",
                "UBRRH"
            ],
            "cStandard": "c11",
            "cppStandard": "c++11",
            "intelliSenseMode": "gcc-x64",
			"compilerPath": "\"${env:arduinoAvrCompilerPath}\" -std=gnu++11 -mmcu=atmega328p"
        }
    ],
    "version": 4
}